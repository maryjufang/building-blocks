<svg width={{width}} height={{height}} data-test-id={{dataTestId}}>
  <g transform="translate(0, 0)">
    {{#if noChart}}
      <rect width={{width}} height={{height}} class="chart-grid">
      </rect>
      <text x={{noChartText.x}} y={{noChartText.y}} dy=".35em" text-anchor="middle">
        {{#if isLoading}}
          Loading
        {{else}}
          No data available
        {{/if}}
      </text>
    {{else}}
      <text x={{yTitleText.x}} y={{yTitleText.y}} transform={{yTitleText.transform}}>{{yTitle}}</text>
      <g class="y-axis" transform={{yAxisTransform}}>
      </g>
      <g class="x-axis" transform={{xAxisTransform}}>
      </g>
      <g class="line" transform={{lineAxisTransform}}>
        <rect width={{chartDimension.width}} height={{chartDimension.height}} pointer-events="all" class="svg-mouse-catch"></rect>
        {{#if showTooltip}}
          <line x1={{offsetX}} y1=0 x2={{offsetX}} y2={{chartDimension.height}} class="svg-mouse-line" />
        {{/if}}
        <path class="svg-line svg-line-1"></path>
      </g>
    {{/if}}
  </g>
</svg>

{{#if showTooltip}}
  <foreignObject>
    <div class="svg-tooltip-tip" style={{tooltipStyle}}>
      {{dataValue}} <br/>
      {{yield (hash tip=true)}}
    </div>
  </foreignObject>
{{/if}}
